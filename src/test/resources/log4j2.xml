<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" name="test" monitorInterval="300">
    <Appenders>
        <Console name="STDOUT">
            <PatternLayout pattern="%d{dd/MM/yyyy HH:mm:ss:SSS} %5p %c{1}:%L - %m%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="com.illimity" level="DEBUG" additivity="false">
            <AppenderRef ref="STDOUT"/>
        </Logger>
        <Root level="WARN">
            <AppenderRef ref="STDOUT"/>
        </Root>
    </Loggers>
</Configuration>